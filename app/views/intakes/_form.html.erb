<%= form_with(model: @intake, local: true) do |form| %>
  <% if @intake.errors.any? %>
    <div id="error_explanation" class="my-16 p-8 text-7xl bg-red-400 font-bold">
      <p><%= pluralize(@intake.errors.count, "error") %> prohibited this intake from being saved:</p>
      <ul class="mt-8">
        <% @intake.errors.full_messages.each do |message| %>
          <li class="text-6xl"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="w-full flex flex-col space-y-32 mt-24 pb-24 text-6xl text-gray-800 tracking-wide">
    <%= form.fields_for :client, @client do |client_attributes|%>
      <div class="field w-full">
        <%= client_attributes.label :first_name, "First Name", class: "block leading-relaxed text-gray-700" %>
        <%= client_attributes.text_field :first_name, size: 23, class: "w-full rounded-lg p-8 text-6xl", required: true %>
      </div>
      <div class="field w-full">
        <%= client_attributes.label :last_name, "Last Name", class: "block leading-relaxed text-gray-700"  %>
        <%= client_attributes.text_field :last_name, size: 23, class: "w-full rounded-lg p-8 text-6xl" %>
      </div>
      <div class="field w-full">
        <%= client_attributes.label :date_of_birth, class: "block leading-relaxed text-gray-700", required: true  %>
        <span class="flex flex-1">
          <%=
            client_attributes.date_field :date_of_birth, 
              value: Date.current - 50.years,
              required: true,
              class: "w-full rounded-lg p-8 text-6xl text-gray-700"
            %>
        </span>
      </div>
      <div class="field w-full">
        <%= client_attributes.label :gender, class: "block leading-relaxed"  %>
        <%= client_attributes.select :gender, 
          options_for_select(Client::GENDER, @client.gender), 
          {include_blank: true},
          class: "w-full rounded-lg bg-white p-6 text-6xl text-gray-700", 
          required: true 
        %>
      </div>
      <div class="field w-full">
        <%= client_attributes.label :race, class: "block leading-relaxed text-gray-700" %>
        <ul class="flex flex-1 flex-col w-full space-y-12 p-12 text-6xl text-gray-700">
          <% Client::RACE.each do |race| %>
            <li class="flex flex-1 space-x-10 items-baseline">
              <%= client_attributes.check_box :race, 
                { 
                  multiple: true, 
                  checked: race.in?(@client.races),
                  class: "w-11 h-11 text-indigo-600"
                },
                race, 
                race.in?(@client.races) %>
              <%= client_attributes.label "race_#{race.parameterize.underscore}", race %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="field w-full">
        <%= client_attributes.label :ethnicity, "Hispanic or Latino?", class: "block leading-relaxed text-gray-700" %>
        <%= client_attributes.select :ethnicity, 
          options_for_select(Client::ETHNICITY, @client.ethnicity), 
          {include_blank: true},
          class: "bg-white w-full p-6 text-6xl  text-gray-700",
          selected: @client.ethnicity,
          required: true %>
      </div>
      <div class="field text-gray-700">
        <%= form.label "survey[homelessness_first_time]", 
          "Is this the first time you have been homeless?", 
          class: "block leading-snug" %>
        <%= form.label "survey[homelessness_first_time]", "Yes", class: 'leading-relaxed' %>
        <%= form.radio_button "survey[homelessness_first_time]", true, 
          class: "h-10 w-10 mr-8",
          checked: @intake.survey&.dig('homelessness_first_time') == 'true',
          required: true %>
