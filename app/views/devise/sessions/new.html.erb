<head>
  <title>Swapp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="min-h-screen bg-white overscroll-x-contain overflow-x-hidden">
  <div class="flex mx-auto justify-center mt-48">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1 class="text-4xl text-center font-bold">swapp</h1>

      <div class="flex flex-col space-y-6 mt-12">
        <div class="field">
          <%= f.email_field :email, 
            autofocus: true, 
            autocomplete: "email",
            placeholder: "Email",
            class: "outline-gray"
          %>
        </div>

        <div class="field">
          <%= f.password_field :password, 
            autocomplete: "current-password",
            placeholder: "password",
            class: "outline-gray"
          %>
        </div>


        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-blue w-full" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "text-gray-800 text-sm" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</body>
