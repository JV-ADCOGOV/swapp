<div class="px-6 mt-16">
  <h3 class="">Hello, <span class="text-gray-900"><strong><em><%= current_user.first_name %></em></strong><span>!</h3>
</div>

<section class="mt-16">
  <% if @swap.present? %>
    <section id="notice--swap-inactive" class="notice bg-blue-300">
     <h3>SWAP is active.</h3>
      <p class="text-blue-900">
        Vouchers can be issued beginning <%= humanize_date(@swap.intake_period.first) %> through <%= humanize_date(@swap.intake_period.last) %>
      </p>
      <div class="text-center text-gray-400 mt-8">
      <i class="bi bi-search text-5xl text-black"></i>
        <%= link_to 'Search for Clients', clients_path, class:"mt-6 p-3 text-5xl" %>
      </div>
    </section>
    <% else %>
    <section>
      <% if @swap.nil? %>
        <section id="notice--swap-inactive" class="notice bg-gray-300">
         <h3 class="pt-12 pl-12">SWAP is <span class="text-red-900">NOT ACTIVE.</span></h3>
          <section class="mt-6 text-center text-4xl">
            Cannot issue vouchers while SWAP is inactive!
          </section>
        </section>
      <% end %>
      </section>
  <% end %>
</section >

<div class="p-3 mt-10 mb-96">
  <% if @swap.present? %>
   <h4 class="m-5 font-bold text-gray-900">Vouchers Remaining:</h4>
   <ul class="p-6 flex flex-1 flex-col space-y-6 border-2 border-gray-900 shadow-2xl divide-y-4 divide-gray-900 divide-dashed">
      <% @vouchers_remaining_today.each do |(motel_id, vouchers)| %>
       <li class="flex flex-1 justify-between items-center p-1">
         <p class="font-bold text-5xl mt-4 pl-7"><%= @motel_map[motel_id] %></p>
         <p class="text-red-900 text-5xl mt-4 pr-10"><%= vouchers %></p>
      </li>
    <% end %>
   </ul>
  <% end %>
</div>

<div class="text-center tracking-wide">
  <h1 class="m-2 p-3 font-bold">How it works:</h1>
  <section class="flex flex-col items-center p-8 mb-32 text-6xl">
