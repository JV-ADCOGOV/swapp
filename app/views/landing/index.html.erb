<section class="mt-2 px-2 border-b-2 border-gray-300">
  <div class="md:container lg:max-w-6xl">
    <div class="mt-2">
      <%= render partial: 'shared/swap_notices' %>
    </div>
    <div class="flex flex-col items-center py-16 px-6">
      <p class="text-base md:text-lg">Check to see whether your client has been served by SWAP before</p>
      <%= link_to clients_path, class: "mt-8 inline-flex items-center px-3 py-2 
      border border-transparent bg-indigo-600 hover:bg-indigo-700 
      focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500
      text-white text-lg sm:text-xl md:text-2xl leading-4 font-semibold tracking-wide
      rounded-lg shadow-sm" do %>
        <span>Go to Client Search</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
  </div>
</section>
<section>
  <div class="md:container lg:max-w-6xl">
    <div class="max-w-md md:max-w-xl mx-auto px-8 py-16 flex flex-col gap-16">
      <h2 class="text-center">
        How it works:
      </h2>
      <div class="flex flex-col md:flex-row md:items-start">
        <span class="text-6xl md:mt-3">
          🔍
        </span>
        <div class="mt-2 md:ml-6">
          <h2>
            Search for your client.
          </h2>
          <p class="mt-1 md:mt-2 text-base md:text-lg text-gray-800">
            If your client has used SWAP before, they’ll show up in the search, and you can fast track to issue a voucher.
          </p>
        </div>
      </div>
      <div class="flex flex-col md:flex-row md:items-start">
        <span class="text-6xl md:mt-3">
          📋
        </span>
        <div class="mt-2 md:ml-6">
          <h2>
            Perform intake.
          </h2>
          <p class="mt-1 md:mt-2 text-base md:text-lg text-gray-800">
            Ask your client some demographic and situational questions.
          </p>
        </div>
      </div>
      <div class="flex flex-col md:flex-row md:items-start">
        <span class="text-6xl md:mt-2">
          🛏️
        </span>
        <div class="mt-2 md:ml-6">
          <h2>
            Issue a hotel voucher.
          </h2>
          <p class="mt-1 md:mt-2 text-base md:text-lg text-gray-800">
            Front desk staff will be automatically notified of your client's reservation.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="border-t-2 border-gray-200">
  <div class="md:container lg:max-w-6xl">
    <div class="flex flex-col md:flex-row items-center justify-around space-y-16
              md:space-y-0 md:space-x-4 md:px-8 py-16">
      <a class="text-black w-32" href="https://www.codeforamerica.org/" target="_blank">
        <%= render partial: 'shared/cfa_logo_lg' %>
      </a>
      <a href="https://www.adcogov.org/community-safety-well-being" target="_blank">
        <img src="https://www.adcogov.org/sites/all/themes/adams/images/logo.png" alt="Adams County">
      </a>
      <a class="w-48" href="https://www.almosthomeonline.org/" target="_blank">
        <img src="https://static.wixstatic.com/media/d5c3cb_6e8da3e0f3424ecba9758fdb99f00ff7~mv2.png/v1/fill/w_879,h_192,al_c,lg_1,q_85/AlmostHome_Logo_Horizontal_01_Web.webp" alt="Almost Home">
      </a>
    </div>
  </div>
</section>
