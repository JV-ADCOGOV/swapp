

 <div class="lg:container lg:mx-auto max-w-6xl  w-full">
  <table class="text-left text-3xl tracking-wide w-full">
    <thead>
      <tr class="bg-black text-white block">
        <th class="lg:rounded-tl-lg py-8 pl-8 uppercase w-60">First Name</th>
        <th class="py-8 uppercase w-60">Last Name</th>
        <th class="py-8 uppercase w-60">Date of Birth</th>
        <th class="py-8 uppercase w-60">Gender</th>
        <th class="lg:rounded-tr-lg py-8"></th>
      </tr>
    </thead>
    <tbody class="block overflow-auto" style="height: 500px;">
      <% @clients.each do |client| %>
        <tr>
          <td class="pl-8 py-8 text-left mx-0 px-0 w-60"><%= client.first_name %></td>
          <td class="py-8 text-left mx-0 px-0 w-60"><%= client.last_name %></td>
          <td class="py-8 text-left mx-0 px-0 w-60"><%= formatted_date(client.date_of_birth) %></td>
          <td class="py-8 text-left mx-0 px-0 w-60"><%= client.gender.first %></td>
          <td class="pr-8 py-8 text-left mx-0 px-0">
            <%= link_to('show', client_path(client), class: "link underline") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

