<div class="lg:container lg:mx-auto max-w-6xl w-full">
  <table class="shadow bg-white rounded text-left text-5xl w-full">
    <thead>
      <tr class="bg-black text-white block">
        <th class="lg:rounded-tl-lg py-8 pl-8 w-60">First Name</th>
        <th class="py-8 w-60">Last Name</th>
        <th class="py-8 px-24 w-96">Date of Birth</th>
        <th class="lg:rounded-tr-lg py-8 pr-8"></th>
      </tr>
    </thead>

    <tbody class="block overflow-auto" style="height: 700px">
      <% @clients.each do |client| %>
        <tr>
          <td class="pl-8 py-8 text-left mx-0 px-0 w-60">
            <%= link_to(client.first_name, client_path(client), class: 'link') %>
          </td>
          <td class="py-8 text-left mx-0 px-0 w-60">
            <%= link_to(client.last_name, client_path(client), class: 'link') %>
          </td>
          <td class="py-8 text-left mx-0 px-0 tabular-nums w-80"><%= formatted_date(client.date_of_birth) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
