<div class="w-full">
  <table class="shadow bg-white rounded text-left text-5xl w-full">
    <thead>
      <tr class="bg-black text-white">
        <th class="lg:rounded-tl-lg py-8 pl-8">First Name</th>
        <th class="py-8">Last Name</th>
        <th class="py-8">Date of Birth</th>
        <th class="lg:rounded-tr-lg py-8 pr-8"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td class="pl-8 py-8 text-left mx-0 px-0">
            <%= link_to(client.first_name, client_path(client)) %>
          </td>
          <td class="py-8 text-left mx-0 px-0">
            <%= link_to(client.last_name, client_path(client)) %>
          </td>
          <td class="py-8 text-left mx-0 px-0 tabular-nums"><%= formatted_date(client.date_of_birth) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
