<div class="rounded-lg bg-white shadow">
  <div class="p-2 md:p-6 flex justify-between items-center">
    <div>
      <div class="flex items-center">
        <span class="mr-2"><%= profile_photo_for(@client) %></span>
        <h3><%= @client.name %></h3>
      </div>
    </div>
    <div>
      <p class="text-sm md:text-base lg:text-lg font-italic text-gray-600">
        Last update: <%= time_ago_in_words(@client.updated_at) %> ago
      </p>
    </div>
  </div>
  <div class="p-2 md:p-6 grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-8 items-center">
    <div>
      <span class="p-1 text-sm md:text-base lg:text-lg block leading-snug font-semibold text-gray-600">
        Date of Birth 
      </span>
      <span class="p-1 text-base sm:text-lg md:text-xl">
        <%= @client&.date_of_birth || '- -' %>
      </span>
    </div>
    <div>
      <span class="p-1 text-sm md:text-base lg:text-lg block leading-snug font-semibold text-gray-600">
        Gender Identity
      </span>
      <span class="p-1 text-base sm:text-lg md:text-xl">
        <%= @client&.gender || '- -' %>
      </span>
    </div>
    <div>
      <span class="p-1 text-sm md:text-base lg:text-lg block leading-snug font-semibold text-gray-600">
        Race
      </span>
      <span class="p-1 text-base sm:text-lg md:text-xl">
        <%= @client&.race&.join(", ") || '- -'  %>
      </span>
    </div>
    <div>
      <span class="p-1 text-sm md:text-base lg:text-lg block leading-snug font-semibold text-gray-600">
        Ethnicity
      </span>
      <span class="p-1 text-base sm:text-lg md:text-xl">
        <%= @client&.ethnicity || '- -' %>
      </span>
    </div>
  </div>
  <% if current_user.admin_user? || current_user.intake_user? %>
    <div class="flex flex-1 items-center justify-center bg-gray-50 border-t border-gray-200">
      <div class="flex items-center space-x-2 p-2 md:p-6">
        <%= link_to(client_path(@client, editing: true), {
            class: "flex items-center space-x-2 px-4 md:px-6 py-1 md:py-2 bg-white focus:outline-none
            focus:ring-2 focus:ring-offset-2 text-gray-700 focus:ring-indigo-500
            hover:bg-gray-50 rounded shadow border border-indigo-600"
        }) do %>
          <svg stroke="currentColor" fill="none" stroke-width="2" viewBox="0 0 24
          24" stroke-linecap="round" stroke-linejoin="round" height="1em"
          width="1em" xmlns="http://www.w3.org/2000/svg"><path d="M11 4H4a2 2 0 0
          0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5
          2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
          <span class="text-sm md:text-xl">Edit Client Details</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
