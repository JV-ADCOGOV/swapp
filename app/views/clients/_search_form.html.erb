<div class="text-2xl mt-16">
  <%= search_form_for @q do |f| %>
    <%= f.search_field :first_name_or_last_name_cont, 
      placeholder: 'Search by name', 
      autofocus: true,
      class: "rounded py-3 px-6 text-gray-900 leading-tight outline-black focus:shadow-outline h-15 w-1/3"
    %>
    <%= f.submit 'Search', 
      class: "btn btn-blue h-16" 
    %>
  <% end %>
</div>
