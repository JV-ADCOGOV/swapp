<div class="text-2xl mt-10">
  <%= search_form_for @q do |f| %>
    <%= f.search_field :first_name_or_last_name_cont, 
      placeholder: 'Search by name', 
      autofocus: true,
      class: "rounded py-3 px-4 text-gray-700 leading-tight focus:shadow-outline"
    %>
    <%= f.submit 'Search', 
      class: "rounded-lg p-4" 
    %>
  <% end %>
</div>
