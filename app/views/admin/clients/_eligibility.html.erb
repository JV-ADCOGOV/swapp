<section class="bg-white rounded border-8 border-yellow-200 p-2 md:p-6 text-lg md:text-2xl">
  <% if @client.banned? %>
    <p>
      <span class="font-semibold text-red-500"><%= @client.first_name %> has been red-flagged program-wide.</span> They are not eligible to receive SWAP hotel vouchers.
    </p>
  <% end %>

  <% if @client.partial_ban? %>
    <p>
      <span class="font-semibold"><%= @client.first_name %></span> is currently banned from these hotels:
    </p>
    <ul class="mt-2">
    <% @client.flagged_hotels.each do |hotel| %>
      <li class="list-inside list-disc"><%= hotel.name %></li>
    <% end %>
    </ul>
  <% end %>

  <% if @client.no_flags? %>
    <p>
      <span class="font-semibold"><%= @client.first_name %></span> is eligible to receive vouchers at any participating SWAP hotel.
    </p>
  <% end %>
</section>