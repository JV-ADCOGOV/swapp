<section class="bg-white shadow-lg rounded-lg">
 <div class="p-8 grid grid-cols-2 border border-4 rounded-lg current-swap-border">
  <div>
    <h4 class="font-bold">Current Voucher Supply:</h4>
    <ul class="mt-2 text-2xl space-y-2">
      <% @vouchers_remaining_today.each do |(hotel_id, vouchers)| %>
        <li>
          <span><%= vouchers %></span>
          <span class="ml-5"><%= @hotel_map[hotel_id] %></span>
        </li>
      <% end %>
      <p class="mt-2 text-2xl font-bold"><%= @num_vouchers_remaining_today %> <span class="ml-5">Total Vouchers</span></p>
    </ul>
  </div>
  <div>
    <h4 class="font-bold">Current Swap Period:</h4>
    <div className="mt-4 grid grid-cols-2 gap-6 max-w-2xl text-3xl mx-auto tabular-nums">
      <div className="flex justify-between">
        <span className="font-bold">Check In</span>
        <span><%= @swap.start_date.to_formatted_s(:short) %></span>
      </div>
      <div className="flex justify-between">
        <span className="font-bold">Check Out</span>
        <span><%= @swap.end_date.to_formatted_s(:short) %></span>
      </div>
      <div className="col-span-2">
        <div className="font-bold">Intake Dates</div>
        <div className="mt-2">
          <%= @swap.intake_dates.map {|date| date.to_formatted_s(:short) }.join(", ") %>
        </div>
      </div>
    </div>
  </div>
</section>
