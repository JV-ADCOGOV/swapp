<section class="border border-gray-500 mt-16 shadow-xl">
    <h2 class="bg-gray-900 text-white text-6xl text-center font-semibold p-6">Flagged Clients</h2>
    <table class=" bg-white rounded text-left text-4xl w-full">
      <thead>
        <tr class="bg-gray-900 text-white">
          <th class="pl-4 w-2/3 lg:rounded-tl-lg py-8">Full Name</th>
          <th class="text-center w-1/3 lg:rounded-tl-lg py-8">Modify</th>
        </tr>
      </thead>
      <tbody class=" overflow-y-scroll" style="height: 430px;">
        <% @flagged_clients.each do |flagged_client| %>
          <tr>
            <td class="py-3 px-2 w-2/3 text-left tabular-nums">
              <%= flagged_client.name %> 
            </td>
            <td class="py-3 px-2 w-1/3 text-center">
                <a href="hotels/guests/<%= flagged_client.id %>" class="link"><i class="bi bi-arrow-up-right-circle"></i></a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>