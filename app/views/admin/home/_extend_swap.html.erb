<div class="p-12 bg-gray-100 border border-gray-500 flex flex-1 flex-col gap-y-6">
  <%= form_for(@swap, url: admin_extend_swap_path(@swap), method: :put) do |form| %>
    <div class="flex flex-1 justify-center">
      <%= number_field_tag "days", 1, min: 1, step: 1, class: "pl-8 w-24 rounded-l-lg p-4 border-t mr-0 text-5xl text-gray-900 bg-white border border-gray-500"
      %>
      <%= 
        form.submit "extend stay period", 
          data: { confirm: "WARNING: The current Swap Period will be extended. This action cannot be undone, except by a database administrator. Are you certain this is what you want to do?" },
          class:"py-4 px-8 rounded-r-lg bg-yellow-400 text-gray-900 font-bold border-b border-gray-900 shadow-lg"
      %>
    </div>
  <% end %>
</div>
