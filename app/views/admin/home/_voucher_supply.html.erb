  <%= form_for(:room_supply, url: admin_update_room_supply_path(@swap), method: :put) do |form| %>
  <table class="shadow bg-white rounded text-left w-full table-fixed">
    <h2 class="bg-gray-900 text-white text-6xl font-semibold p-6">Voucher Supply</h2>
    <thead>
      <tr class="bg-gray-900 text-white text-4xl">
        <th class="w-3/5 p-6"></th>
        <th class="w-2/5 p-6 text-center align-top" colspan="2"><%= Date.current.strftime("%A, %b %d") %></th>
      </tr>
      <tr class="bg-gray-900 text-white text-4xl">
        <th class="w-3/5 p-6">Motel</th>
        <th class="w-1/5 p-6 text-center align-top">Issued</th>
        <th class="w-1/5 p-6 text-center align-top">Vacant</th>
      </tr>
    </thead>
    <tbody class="overflow-y-scroll text-5xl" style="height: 630px">
      <% @availability.each do |motel, supply| %>
        <tr>
          <td class="w-3/5 p-6 text-left">
            <%= motel.name %>
          </td>
          <td class="w-1/5 p-6 text-center tabular-nums">
            <%= 10 %>
          </td>
          <td class="w-1/5 p-6 text-center tabular-nums">
            <%= form.number_field motel.id,
                min: 0, step: 1, 
                class: "rounded-lg border border-gray-300 w-20 text-center p-2", 
                value: supply[Date.current]
              %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="p-12 bg-gray-100 border border-gray-500 flex flex-1 flex-col gap-y-6">
    <div class="flex flex-1 justify-center">
      <%= form.submit "update supply", 
      data: { confirm: "WARNING here..." },
      class:"py-4 px-8 rounded-lg bg-yellow-400 text-gray-900 font-bold border-b border-gray-900 shadow-lg" %>
    </div>
  </div>
<% end %>
