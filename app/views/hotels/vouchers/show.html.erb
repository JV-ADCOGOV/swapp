<main class="container p-4 xl:p-0 max-w-6xl mx-auto mt-12 pb-24 space-y-10 lg:space-y-16">
  <div class="px-2">
    <%= link_to hotels_home_path, class: "link no-underline" do %>
      <p class="flex items-center gap-2">
        <svg width="1em" height="1em" fill="currentColor">
          <path fill-rule="evenodd" d="M15 8a.5.5 0 0
        0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0
        .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
        </svg>
        back to voucher list
      </p>
    <% end %>
  </div>
  <!-- voucher details -->
  <section>
    <h3 class="px-2 font-bold tabular-nums tracking-wide"><%= @voucher.number %> - <%= @voucher.client.name %></h3>
    <div class="mt-3 flex flex-col lg:flex-row bg-white divide-y-2 lg:divide-y-0 lg:divide-x-2 divide-gray-300 border border-gray-300 rounded-lg">
      <div class="flex flex-2 flex-col lg:w-2/3">
        <div class="flex divide-x-2 divide-gray-300">
          <div class="w-full flex flex-col">
            <p class="px-3 py-1 bg-gray-100 text-gray-500 lg:text-base uppercase font-bold tracking-wide">Voucher #</p>
            <p class="px-3 py-4 tabular-nums text-xl lg:text-2xl"><%= @voucher.number %></p>
          </div>
          <div class="w-full flex flex-col">
            <p class="px-3 py-1 bg-gray-100 text-gray-500 lg:text-base uppercase font-bold">Holder</p>
            <p class="px-3 py-4 text-xl lg:text-2xl"><%= @voucher.client.name %></p>
          </div>
        </div>
        <div class="flex divide-x-2 divide-gray-300">
          <div class="w-full flex flex-col gap-2">
            <p class="px-3 py-1 bg-gray-100 text-gray-500 lg:text-base uppercase font-bold tracking-wide">Check In</p>
            <p class="px-3 py-4 tabular-nums text-xl lg:text-2xl"><%= humanize_date_short(@voucher.check_in) %></p>
          </div>
          <div class="w-full flex flex-col gap-2">
            <p class="px-3 py-1 bg-gray-100 text-gray-500 lg:text-base uppercase font-bold tracking-wide">Check Out</p>
            <p class="px-3 py-4 tabular-nums text-xl lg:text-2xl"><%= humanize_date_short(@voucher.check_out) %></p>
          </div>
        </div>
        <div class="flex divide-x-2 divide-gray-300">
          <div class="w-full flex flex-col gap-2">
            <p class="px-3 py-1 bg-gray-100 text-gray-500 lg:text-base uppercase font-bold tracking-wide">Issued By</p>
            <p class="px-3 py-4 tabular-nums text-xl lg:text-2xl"><%= @voucher.user.name %></p>
          </div>
          <div class="w-full flex flex-col gap-2">
            <p class="px-3 py-1 bg-gray-100 text-gray-500 lg:text- uppercase font-bold tracking-wide">Issued On</p>
            <p class="px-3 py-4 tabular-nums text-xl lg:text-2xl"><%= humanize_date_short(@voucher.created_at) %></p>
          </div>
        </div>
      </div>
      <!-- guests and notes -->
      <div class="flex flex-1 flex-col gap-8">
        <div>
          <p class="px-2 py-1 bg-gray-100 text-gray-800 text-sm lg:text-base uppercase font-bold tracking-wide">Approved Guests</p>
          <% if @voucher.guests.empty? %>
            <p class="p-3 py-4 text-lg lg:text-xl">No guests.</p>
          <% end %>
          <ul class="px-3 py-4 text-left text-lg lg:text-xl list-decimal list-inside space-y-2">
            <% @voucher.guests.each do |guest| %>
              <li class="p-2"><%= guest.name %></li>
            <% end %>
          </ul>
        </div>
        <div>
          <p class="px-3 py-1 bg-gray-100 text-gray-800 text-sm lg:text-base uppercase font-bold tracking-wide">Notes</p>
          <p class="px-3 py-4 mt-2 text-lg md:text-xl leading-relaxed"><%= @voucher.notes %></p>
        </div>
      </div>
      <!-- end guests and notes -->
    </div>
  </section>
  <!-- end voucher details -->
  <section>
    <div class="flex flex-col lg:flex-row gap-10 lg:gap-4">
      <div class="flex-1">
        <%= render partial: 'incidents' %>
      </div>
      <div class="flex-1">
        <%= render partial: 'red_flags' %>
      </div>
    </div>
  </section>
</main>
