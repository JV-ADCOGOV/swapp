<main class="container lg:px-10 pb-10 mx-auto mt-12 space-y-10 lg:space-y-16">
  <div class="px-2">
    <%= link_to "< back to voucher list", hotels_home_path, class: "link no-underline" %>
  </div>
  <!-- voucher details -->
  <section>
    <h3 class="px-2 font-bold tabular-nums tracking-wide"><%= @voucher.number %> - <%= @voucher.client.name %></h3>
    <div class="mt-3 flex flex-col md:flex-row divide-y-8 md:divide-y-0 md:divide-x-8 divide-dashed divide-gray-300 border-4 border-gray-500 rounded-lg">
      <div class="flex flex-col md:w-2/3 text-lg md:text-xl">
        <div class="flex ">
          <div class="w-full flex flex-col p-6 gap-2">
            <p class="text-gray-700 text-lg uppercase font-bold tracking-wide">Voucher #</p>
            <p class="tabular-nums text-2xl"><%= @voucher.number %></p>
          </div>
          <div class="w-full flex flex-col p-6 gap-2">
            <p class="text-lg uppercase font-bold">Holder</p>
            <p class="text-2xl"><%= @voucher.client.name %></p>
          </div>
        </div>
        <div class="flex border-t-8 border-dashed border-gray-300">
          <div class="w-full flex flex-col p-6 gap-2">
            <p class="text-gray-700 text-lg uppercase font-bold tracking-wide">Check In</p>
            <p class="tabular-nums text-2xl"><%= humanize_date_short(@voucher.check_in) %></p>
          </div>
          <div class="w-full flex flex-col p-6 gap-2">
            <p class="text-gray-700 text-lg uppercase font-bold tracking-wide">Check Out</p>
            <p class="tabular-nums text-2xl"><%= humanize_date_short(@voucher.check_out) %></p>
          </div>
        </div>
        <div class="flex border-t-8 border-dashed border-gray-300">
          <div class="w-full flex flex-col p-6 gap-2">
            <p class="text-gray-700 text-lg uppercase font-bold tracking-wide">Issued By</p>
            <p class="tabular-nums text-2xl"><%= @voucher.user.name %></p>
          </div>
          <div class="w-full flex flex-col p-6 gap-2">
            <p class="text-gray-700 text-lg uppercase font-bold tracking-wide">Issued On</p>
            <p class="tabular-nums text-2xl"><%= humanize_date_short(@voucher.created_at) %></p>
          </div>
        </div>
      </div>
      <!-- guests and notes -->
      <div class="flex flex-col p-6 gap-6">
        <div>
          <p class="text-gray-700 text-lg uppercase font-bold tracking-wide">Approved Guests</p>
          <ul class="text-left list-decimal list-inside space-y-2 text-lg pt-4">
            <li>fiona tang</li>
            <li>brandon johnson</li>
            <li>Ben Poon</li>
          </ul>
        </div>
        <div>
          <p class="text-gray-700 text-lg uppercase font-bold tracking-wide">Notes</p>
          <p class="mt-4">this muhfucka gotta dawg</p>
        </div>
      </div>
      <!-- end guests and notes -->
    </div>
  </section>
  <!-- end voucher details -->
  <section>
    <div class="flex flex-col lg:flex-row gap-10 lg:gap-4">
      <div class="flex-2">
        <%= render partial: 'incidents' %>
      </div>
      <div class="flex-1">
        <%= render partial: 'red_flags' %>
      </div>
    </div>
  </section>
</main>
