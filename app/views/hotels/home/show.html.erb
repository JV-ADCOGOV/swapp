<div class="px-16 mt-12">
    <a href="/hotels" class="link pb-12"><< Vouchers</a>
    <h4>Guest Detail: <%= @client.name %></h4>
    <%# Admin Only %>
    <section class="border border-red-500 mt-16 shadow-xl w-96 mx-auto  ">
        <h2 class="bg-red-900 text-white text-4xl text-center font-semibold p-2">ADMIN ONLY</h2>
        <div>
            <%= form_with model: @clients_hotels do |form| %>
            <%= form.label "Select Hotel(s) where client is flagged", class: "text-xl" %>
            <ul class="flex flex-1 flex-col p-3">
            <% @hotels.each do |hotel| %>
                <li class="flex flex-1 items-center py-1"><%= check_box_tag "[#{hotel.id}"%><%= label_tag "#{hotel.name}"%></li>
            <% end %>
            </ul>
            <div class="flex flex-1 p-3">
                <%= form.submit "Update Flags", class: "p-2 bg-blue-600 text-white hover:bg-blue-900 cursor-pointer" %>
            </div>
            <% end %>
    </section>
    <section class="px-3 mt-16">
        <p>Additional Approved</p>
        <p>Guest Names</p>
        <ul class="mt-6">
            <li>Limp Bizkit</li>
        </ul>
    </section>
    <section class="mt-16">
        <h4>Past Incidents</h4>
        <div class="px-3 mt-8 flex flex-wrap">
        <% if @client.incident_reports.any? %>
            <% @client.incident_reports.each do |incident| %>
               <div class="px-10 my-4 py-3 rounded shadow-xl bg-white w-3/5">
                    <div class="flex justify-between items-center">
                        <span class="font-light text-gray-600"><%= humanize_date(incident.created_at) %></span>
                    </div>
                    <div class="mt-2">
                        <p class="mt-2 text-gray-700">
                            <%= incident.description %>
                        </p>
                    </div>
                </div>
            <% end %>
        <% else %>
            <p class="text-2xl"><strong>No incident reports to show!</strong></p>
        <% end %>
        </div>
    </section>
    <section class="mt-16">
        <h4 class="mb-12">New Incident Report</h4>
        <%= form_with model: @incident_report, url: hotels_create_report_path do |form| %>
        <div>
            <%= form.label "Name:", class: "block"  %>
            <%= form.text_field :reporter_id, value: "#{current_user.name}", disabled: true %>
            <%= form.label "Date:", class: "block" %>
            <%= form.text_field :occurred_at, value: Date.current, disabled: true %>
        </div>
        <div class="mt-6">
            <%= form.label "Description:", class: "block mb-3" %>
            <%= form.text_field :description, class:"w-96 h-72" %>
        </div>
        <div class="my-4">
            <%= form.submit "Submit New Report", class: "p-3 bg-blue-600 text-white hover:bg-blue-900 cursor-pointer" %>
        </div>
        <% end %>
    </section>
</div>