<div class="px-16 mt-12">
    <a href="/hotels" class="link pb-12"><< Vouchers</a>
    <h4>Guest Detail: <%= @client.name %></h4>
    <section class="px-3 mt-16">
        <p>Additional Approved</p>
        <p>Guest Names</p>
        <ul class="mt-6">
            <li>Limp Bizkit</li>
            <li>Limp Bizkit</li>
            <li>Limp Bizkit</li>
            <li>Limp Bizkit</li>
        </ul>
    </section>
    <section class="mt-16">
        <h4>Past Incidents</h4>
        <div class="px-3 mt-8">
        <% if @client.incident_reports.any? %>
            <% @client.incident_reports.each do |incident| %>
                    <p><%= incident.description %></p>
            <% end %>
        <% else %>
            <p class="text-2xl"><strong>No incident reports to show!</strong></p>
        <% end %>
        </div>
    </section>
    <section class="mt-14">
        <h4>New Incident Report</h4>
        <%= form_with do |form| %>
            <%= form.label "Name:" %>
            <%= form.text_field :name %>
            <%= form.label "Date:" %>
            <%= form.text_field :date %>
            <%= form.label "Description" %>
            <%= form.text_field :description %>
            <%= form.submit "Submit" %>
        <% end %>
    </section>
</div>