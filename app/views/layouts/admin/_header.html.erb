<header class="p-4 w-full flex items-center justify-between">
  <span class="font-semibold text-5xl">
   <%= link_to'swapp', clients_path %>
   <% if current_user.admin? %>
     <span class="text-blue-500">admin</span>
   <% end %>
  </span>
  <% if user_signed_in? %>
    <ul class="list-none flex space-x-3 justify-end text-3xl">
        <span class="text-gray-500 tracking-tight"><%= current_user.email %></span>
        <% if current_user.admin? %>
          <%= link_to 'non-admin', root_path, class: "link"  %>
        <% end %>
        <%= link_to('logout', destroy_user_session_path, method: :delete, class: "link underline") %>
    <% end %>
    </ul>
</header>
